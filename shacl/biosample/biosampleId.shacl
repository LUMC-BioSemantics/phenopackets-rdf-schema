@base <http://purl.org/ejp-rd/phenopackets-rdf-schema/v200/shacl/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sio: <http://semanticscience.org/resource/> .
@prefix obo: <http://purl.obolibrary.org/obo/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:biosampleShape 
  a sh:NodeShape ;
  sh:targetClass sio:SIO_010412 ;
  sh:targetClass obo:NCIT_C43412 ;
  sh:nodeKind sh:IRI ;
  sh:property [
     sh:path sio:SIO_000228 ;
     sh:name "has role" ; 
     sh:minCount 1 ;
     sh:maxCount 1 ;
     sh:node @:biosampleRoleShape ;
  ] .

:biosampleIdShape 
  a sh:NodeShape ;
  sh:targetClass sio:SIO_000115 ;
  sh:targetClass obo:IAO_0020000 ; 
  sh:nodeKind sh:IRI ;
  sh:property [
     sh:path sio:SIO_000020
     sh:name "denotes" ;
     sh:minCount 1 ;
     sh:maxCount 1 ; 
     sh:node @:biosampleRoleShape ;
  ] ;
  sh:property [
  sh:path sio:SIO_000300 ;
  sh:name "has value" ;
  sh:minCount 1 ;
  sh:maxCount 1 ;
  sh:datatype xsd:string ;
  ] .


:biosampleRoleShape 
  a sh:NodeShape ;
  sh:targetClass sio:SIO_000016 ; 
  sh:targetClass obo:OBI_0000740 ;
  sh:nodeKind sh:IRI .


